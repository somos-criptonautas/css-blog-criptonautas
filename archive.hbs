{{!< default}}



<main class="gh-main gh-outer">
    <div class="gh-inner">
        <section class="gh-topic ms-archive">
        <h2>Post Archive</h3>
         {{#get "tags" limit="all" }}
                 <div class="gh-topic-list">
                     {{#foreach tags }}
                     {{! We don't re-use the topic-minimal partial because 
                           we use "limit=all" here instead of "limit=5" }}
                     <section class="gh-topic gh-topic-minimal">
                         <header class="gh-topic-header">
                             <h2 class="gh-topic-name">
                                 <a href="{{url}}">{{name}}</a>
                             </h2>
                         </header>

                         <div class="gh-topic-content">
                              {{#get "posts" include="tags,authors" filter="tag:{{slug}}" limit="all"}}
                                 {{#foreach posts}}
                                     {{> "loop-minimal"}}
                                 {{/foreach}}
                               {{/get}}
                         </div>
                     </section>
                     {{/foreach}}
                 </div>
         {{/get}}
        </section>
    </div>
</main>
