{
    "name": "headline",
    "description": "A Ghost theme",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "docs": "https://headline.ghost.io/about/",
    "config": {
        "posts_per_page": 7,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "header_style": {
                "type": "select",
                "options": [
                    "Light",
                    "Dark"
                ],
                "default": "Light"
            },
            "white_publication_logo_for_transparent_header": {
                "type": "image"
            },
            "enter_tag_slugs_for_primary_sections": {
                "type": "text",
                "group": "homepage"
            },
            "enter_tag_slugs_for_secondary_sections": {
                "type": "text",
                "group": "homepage"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip",
        "preinstall": "npm install --package-lock-only --ignore-scripts && npx npm-force-resolutions"
    },
    "resolutions": {
        "graceful-fs": "^4.2.10"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "2.4.5",
        "autoprefixer": "10.4.19",
        "beeper": "2.1.0",
        "cssnano": "7.0.4",
        "gscan": "4.43.1",
        "gulp": "5.0.0",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "ordered-read-streams": "2.0.0",
        "postcss": "8.4.39",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.0"
    }
}
