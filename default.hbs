<!DOCTYPE html>
<html lang="{{@site.locale}}">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{meta_title}}</title>
    <link rel="stylesheet" href="{{asset "built/screen.css"}}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/instantsearch.css@8.0.0/themes/reset-min.css"
        integrity="sha256-2AeJLzExpZvqLUxMfcs+4DWcMwNfpnjUeAAvEtPr0wU=" crossorigin="anonymous">
    <link href="{{@site.url}}/continue" rel="prefetch">
    <link href="{{@site.url}}/start" rel="prefetch">
    <link rel="preconnect" href="https://comunidad.criptonautas.co">
    <script
        src='https://pay.criptonautas.co/plugins/Ftaic9XyP8AYSuMKrU2bxw7PrAn9DZjyJKGY62BXThy1/ghost/public/paywall/btcpay-ghost-paywall.js'></script>
    <script>
        if (typeof (Storage) !== 'undefined') {
            if (localStorage.getItem('selected-theme') == 'light') {
                document.documentElement.setAttribute('data-theme', 'light');
            }
            else if (localStorage.getItem('selected-theme') == 'dark') {
                document.documentElement.setAttribute('data-theme', 'dark');
            }
        }
    </script>
    {{#if @member}}
    {{else}}
    {{#is "home"}}
    {{> "newsletter"}}
    <link rel="stylesheet" href="{{asset " built/home.css"}}">
    {{/is}}
    {{/if}}
    {{ghost_head}}

</head>

<body class="{{body_class}}{{{block " body_class"}}} {{#if
    @site.description}}is-head-b--a_n{{else}}is-head-b--n--a{{/if}}{{#is "tag" }}{{/is}}">
    <div class="gh-site">
        <header id="gh-head" class="gh-head gh-outer">
            <div class="gh-head-inner gh-inner">
                <div class="gh-head-brand">
                    <div class="gh-head-brand-wrapper">
                        {{^is "home"}}<a class="gh-head-logo" href="{{@site.url}}">{{else}}<span
                                class="gh-head-logo">{{/is}}
                                {{#if @site.logo}}
                                <img class="logo-nav logo-light" src="{{@site.logo}}" alt="{{@site.title}}">
                                <img class="logo-nav logo-dark"
                                    src="{{@custom.white_publication_logo_for_transparent_header}}"
                                    alt="{{@site.title}}">
                                {{else}}
                                {{@site.title}}
                                {{/if}}
                                {{^is "home"}}</a>{{else}}</span>{{/is}}
                        {{#is "home"}}</h1>{{/is}}
                    </div>
                </div>
                <button id="gh-burger" class="gh-burger" aria-label="burger-menu"></button>
                <nav class="gh-head-menu">
                    {{navigation}}
                </nav>
                <div class="gh-head-actions">
                    <div class="actions-container">
                        {{#unless @member}}
                        <a aria-label="signup-button" title="start here" class="gh-head-btn gh-btn shadow"
                            href="{{@site.url}}/start">{{ t "Subscribe" }}</a>
                        {{else}}
                        <a aria-label="signin-button" title="your profile" class="gh-head-btn gh-btn shadow d-none"
                            href="{{@site.url}}/nauta">{{ t "Account" }}</a>
                        {{/unless}}
                        <div class="nav-icons">
                            <button class="gh-search gh-icon-btn d-none" data-ghost-search>{{> "icons/search"}}</button>
                            <div class="it-dark-light gh-icon-btn">
                                <div class="icon-dark">
                                    {{> icons/light}}
                                </div>
                                <div class="icon-light">
                                    {{> icons/dark}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
    </div>
    {{{body}}}
    {{^is "page"}}
    <footer class="gh-foot global-padding">
        <div class="gh-foot-inner gh-inner">

            {{#get 'posts'}}
            {{#foreach posts visibility='all'}}
            {{/foreach}}
            {{/get}}
            {{#unless @member}}
            <section class="d-none">
                <h4 class="gh-subscribe-title">{{ t "Subscribe to" }}</h3>
                    <div class="gh-subscribe-description">{{ t "Newsletter description"}}</div>

                    <a class="gh-subscribe-btn gh-btn" href="{{@site.url}}/start">{{ t "Subscribe now" }}</a>

            </section>
            {{/unless}}
        </div>
    </footer>
    {{/is}}
    <div class="footer-criptonauta global-padding">
        <nav class="gh-foot-menu">
            {{navigation type="secondary"}}
        </nav>
        <div class="it-foot-social">
            {{#if @site.twitter}}
            <a href="https://xcancel.com/satonotdead" title="{{t " Twitter"}}" target="_blank" rel="noopener"
                aria-label="{{t " Twitter"}}">{{> "icons/twitter"}}</a>
            {{/if}}
            <a href="https://github.com/somos-criptonautas/" class="github" title="{{t " Github"}}" target="_blank"
                rel="noopener" aria-label="{{t " Github"}}">{{> "icons/github"}}</a>
            <a href="{{@site.url}}/rss/" class="rss" title="{{t " RSS"}}" target="_blank" rel="noopener"
                aria-label="{{t " RSS"}}">{{> "icons/rss"}}</a>
        </div>
        <span class="no-estamos">(no estamos en Discord)</span>
        <div class="gh-copyright">
            <p>Criptonautas&nbsp;{{ t "is licensed under" }}<br>{{ t "from ü™ê" }} <a href="https://satonotdead.co"
                    title="satonotdead's lab" target="_blank" rel="noopener">satonotdead</a></p>
        </div>
    </div>
    </div>
    {{#is "post, page"}}
    {{> "pswp"}}
    {{/is}}

    {{> "site-structure/site-scripts"}}
    {{{block "scripts"}}}
    {{ghost_foot}}
</body>

</html>