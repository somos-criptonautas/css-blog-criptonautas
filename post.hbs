{{!< default}}

<main class="gh-main">
    <div class="gh-inner">
    {{#post}}
        <article class="gh-article {{post_class}}">
            <header class="gh-article-header gh-canvas">
                {{#if primary_tag}}
                    <a class="gh-article-tag" href="{{primary_tag.url}}">{{primary_tag.name}}</a>
                {{/if}}

                <h1 class="gh-article-title">{{title}}</h1>

                {{#if feature_image}}
                    <figure class="gh-article-image">
                        <img
                                    loading="lazy"
                            srcset="{{img_url feature_image size="s" format="webp"}} 300w,
                                    {{img_url feature_image size="m" format="webp"}} 720w,
                                    {{img_url feature_image size="l" format="webp"}} 960w,
                                    {{img_url feature_image size="xl" format="webp"}} 1200w,
                                    {{img_url feature_image size="xxl" format="webp"}} 2000w"
                            sizes="(max-width: 1200px) 100vw, 1200px"
                            src="{{img_url feature_image size="xl" format="webp"}}"
                            alt="{{title}}"
                        >
                        {{#if feature_image_caption}}
                            <figcaption>{{feature_image_caption}}</figcaption>
                        {{/if}}
                    </figure>
                {{/if}}
            </header>
    {{#is "post"}}
    <div class="gh-author-criptonaut">
                        {{#if custom_excerpt}}
                    <p class="gh-article-excerpt">{{custom_excerpt}}</p>
                {{/if}}

                {{> "post-meta"}}
    </div>
    <div class="gh-full-content">
<aside class="gh-sidebar" id="sidebar-toc">
                {{#if reading_time}}
                <h3>
                    {{reading_time minute="⌚ > 1 min libre" minutes="⌚ % mins libre"}}
                </h3>
                {{/if}}
            <div class="toc">
            </div>
</aside>
            <section class="gh-content gh-canvas toc-content">
            {{content}}
    {{> "comments"}}
            </section>
    {{/is}}
</div>
        </article>
    {{/post}}
    {{> "related-posts"}}
</div>
<script>const typebotInitScript = document.createElement("script");
typebotInitScript.type = "module";
typebotInitScript.innerHTML = `import Typebot from 'https://cdn.jsdelivr.net/gh/somos-criptonautas/typebot.js/typebot.min.js'

  Typebot.initBubble({
    typebot: "hi",
    apiHost: "https://bot.criptonautas.co",
  prefilledVariables: {
    'URL': {{url absolute="true"}},
    'name': {{#if @member.name}}{{ @member.name}}{{else}}'null'{{/if}},
    'email': {{ @member.email}},
    'Paid?' : {{ @member.paid}},
    'ID' : {{ @member.uuid}},
  },
});
`;
document.body.append(typebotInitScript);
</script>
</main>
